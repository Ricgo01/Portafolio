---
import SobreMi from '../components/sections/SobreMi.astro';
import Tecnologias from '../components/sections/Tecnologias.astro';
import Principal from '../components/sections/Principal.astro';
import Proyectos from '../components/sections/Proyectos.astro';

export interface Props {
    title: string;
}

const { title } = Astro.props;

export { SobreMi, Tecnologias, Principal, Proyectos };
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="stylesheet" href="/styles/global.css">
    </head>
    <body class="bg-gray-50 dark:bg-gray-900">
        <header class="sticky top-0 z-50 bg-white/80 dark:bg-gray-800/80 backdrop-blur-md shadow-sm transition-all duration-300">
            <nav class="max-w-6xl mx-auto px-4 py-4 flex justify-between items-center">
                <button></button>
                <a href="/" class="text-xl font-bold text-gray-900 dark:text-white">Mi Portafolio</a>
                <div class="space-x-4">
                    <a href="/" class="text-gray-600 dark:text-gray-300 hover:text-blue-600">Inicio</a>
                    <a href="/#sobremi" class="text-gray-600 dark:text-gray-300 hover:text-blue-600">Sobre Mí</a>
                    <a href="/#tecnologias" class="text-gray-600 dark:text-gray-300 hover:text-blue-600">Tecnologías</a>
                    <a href="/#projets" class="text-gray-600 dark:text-gray-300 hover:text-blue-600">Proyectos</a>
                </div>
            </nav>
        </header>

        <main class="min-h-screen">
            <slot />
        </main>

        <footer class="bg-gray-800 text-white p-6 text-center">
            <p>© 2025 Mi Portafolio</p>
        </footer>
    </body>
</html>

<style>
    html {
        scroll-behavior: smooth;
    }
    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
        font-family: 'Inter', sans-serif;
    }
</style>
